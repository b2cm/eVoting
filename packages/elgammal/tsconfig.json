{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "lib": ["es2020", "DOM"],
    "moduleResolution": "Node",
    "module": "CommonJS",
    "target": "es2020",
    "outDir": "build/",
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "sourceMap": true
  },
  "exclude": ["node_modules", "build"]
}
