{
  "$schema": "https://json.schemastore.org/tsconfig",
  //"extends": "@tsconfig/node14/tsconfig.json",
  "files": ["index.ts"],
  "compilerOptions": {
    "moduleResolution": "Node",
    "lib": ["es2020", "DOM"],
    "outDir": "build/",
    "target": "es2020",
    "allowJs": true,
    "checkJs": false,
    "importHelpers": true,
    "noImplicitAny": false,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
